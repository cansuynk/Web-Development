<%- include("header") -%>

    <!-- 
    <% if ( listTitle === "Saturday" || listTitle === "Sunday" ){  %>
        <h1 style="color: purple;"> <%= listTitle %> ToDo List </h1>
    <% }else{ %>
        <h1 style="color: blue;"> <%= listTitle %> ToDo List </h1>
    <% } %>
    -->
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        
        <% newItems.forEach(function(element){  %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
                    <p> <%= element.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"> </input>
            </form>
        <% })%>
    
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="Enter New Item" autocomplete="off"> 
            <button type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>
    
    </div>

<%- include("footer") -%>

